# read the smb.conf manpage.
# Run 'testparm' to verify the config is correct after
# you modified it.

[global]
workgroup = WORKGROUP
server string = Samba Server %v
netbios name = centos
security = user
map to guest = bad user
dns proxy = no

#============================ Share Definitions ============================== 
[homelab]
path = {{ samba_shares_root }}/homelab
browsable = yes
writable = yes
guest ok = yes
read only = no